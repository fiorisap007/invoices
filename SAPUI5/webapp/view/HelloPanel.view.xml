<mvc:View   controllerName="nsdprb.SAPUI5.controller.HelloPanel"
            xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns:core="sap.ui.core"
            displayBlock="true">

                        <Panel id="panel" headerText="{i18n>helloPanel}" class="sapUiResponsiveMargin" width="auto" >
                            <content>
                                <Button id="xhelloDialog" text="{i18n>helloDialogBut}" press=".onOpenDialog" class="sapUiSmallMarginEnd" ></Button>
                                <Button id="xsayHello" text="{i18n>showHelloButtonText}" press=".onShowHello" class="sapUiSmallMarginEnd" ></Button>
                                <Input id="xhello" value="{/recipient/name}"  width="60%" valueLiveUpdate="true" ></Input>
                                <Text id="xtext" text="Hello {/recipient/name}" class="sapUiSmallMargin boldElements sapThemeHighlight-asColor"></Text>
                            </content>
                        </Panel>
                        
                        <core:Fragment fragmentName="nsdprb.SAPUI5.view.Form01" type="XML"></core:Fragment>
</mvc:View>            