<mvc:View   controllerName="nsdprb.SAPUI5.controller.App"
            xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc"
            displayBlock="true">
    <Shell id="shell">
        <App id="app">
            <pages>
                <Page id="page" title="{i18n>appTitle}">
                    <content>
                        <Panel id="panel" headerText="{i18n>helloPanel}" class="sapUiResponsiveMargin" width="auto" >
                            <content>
                                <Button id="sayHello" text="{i18n>showHelloButtonText}" press=".onShowHello" class="sapUiSmallMarginEnd" ></Button>
                                <Input id="hello" value="{/recipient/name}"  width="60%" valueLiveUpdate="true" ></Input>
                                <Text id="text" text="Hello {/recipient/name}" class="sapUiSmallMargin"></Text>
                            </content>
                        </Panel>
                    </content>
                </Page>
            </pages>
        </App>
    </Shell>
</mvc:View>
